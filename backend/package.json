{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --collectCoverageFrom='**/*.js' --collectCoverageFrom='!**/*.test.js' --collectCoverageFrom='!**/node_modules/**' --collectCoverageFrom='!**/coverage/**'",
    "test:ci": "jest --coverage --ci --collectCoverageFrom='**/*.js' --collectCoverageFrom='!**/*.test.js' --collectCoverageFrom='!**/node_modules/**' --collectCoverageFrom='!**/coverage/**'"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 95,
        "statements": 95
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.31.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
